{
  "kind": "collectionType",
  "collectionName": "guardscan_articles",
  "info": {
    "singularName": "guardscan-article",
    "pluralName": "guardscan-articles",
    "displayName": "GuardScan Article",
    "description": "Blog articles for GuardScan"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext"
    },
    "excerpt": {
      "type": "text",
      "maxLength": 300
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "cybersecurity",
        "vulnerability-scanning",
        "penetration-testing",
        "compliance",
        "threat-intelligence",
        "security-best-practices",
        "incident-response",
        "network-security",
        "application-security",
        "cloud-security",
        "data-protection",
        "security-tools",
        "security-automation",
        "case-studies",
        "industry-news",
        "tutorials-guides",
        "product-updates",
        "security-tips",
        "research",
        "other"
      ]
    },
    "meta_title": {
      "type": "string",
      "maxLength": 60
    },
    "meta_description": {
      "type": "text",
      "maxLength": 160
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "guardscan_articles"
    },
    "canonical_url": {
      "type": "string"
    },
    "og_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "og_image_alt": {
      "type": "string",
      "maxLength": 125
    },
    "og_image_width": {
      "type": "integer",
      "default": 1200
    },
    "og_image_height": {
      "type": "integer",
      "default": 630
    },
    "no_index": {
      "type": "boolean",
      "default": false
    },
    "embedding": {
      "type": "json"
    },
    "ai_generated": {
      "type": "boolean",
      "default": false
    }
  }
}
