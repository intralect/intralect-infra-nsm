{
  "kind": "collectionType",
  "collectionName": "yaicos_articles",
  "info": {
    "singularName": "yaicos-article",
    "pluralName": "yaicos-articles",
    "displayName": "Yaicos Article",
    "description": "Blog articles for Yaicos"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext"
    },
    "excerpt": {
      "type": "text",
      "maxLength": 300
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "alojamiento",
        "visa",
        "trabajo",
        "costo de vida",
        "estilo de vida",
        "transporte",
        "turismo",
        "migracion",
        "irlanda",
        "malta",
        "canada",
        "dubai"
      ]
    },
    "meta_title": {
      "type": "string",
      "maxLength": 60
    },
    "meta_description": {
      "type": "text",
      "maxLength": 160
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "yaicos_articles"
    },
    "canonical_url": {
      "type": "string"
    },
    "og_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "og_image_alt": {
      "type": "string",
      "maxLength": 125
    },
    "og_image_width": {
      "type": "integer",
      "default": 1200
    },
    "og_image_height": {
      "type": "integer",
      "default": 630
    },
    "no_index": {
      "type": "boolean",
      "default": false
    },
    "embedding": {
      "type": "json"
    },
    "ai_generated": {
      "type": "boolean",
      "default": false
    },
    "publishAt": {
      "type": "datetime"
    },
    "unpublishAt": {
      "type": "datetime"
    }
  }
}
