{
  "kind": "collectionType",
  "collectionName": "amabex_articles",
  "info": {
    "singularName": "amabex-article",
    "pluralName": "amabex-articles",
    "displayName": "Amabex Article",
    "description": "Blog articles for Amabex"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext"
    },
    "excerpt": {
      "type": "text",
      "maxLength": 300
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "products",
        "services",
        "business-solutions",
        "technology",
        "innovation",
        "customer-success",
        "case-studies",
        "industry-insights",
        "thought-leadership",
        "how-to-guides",
        "product-updates",
        "company-news",
        "partnerships",
        "events",
        "resources",
        "best-practices",
        "trends",
        "announcements",
        "blog",
        "other"
      ]
    },
    "meta_title": {
      "type": "string",
      "maxLength": 60
    },
    "meta_description": {
      "type": "text",
      "maxLength": 160
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "amabex_articles"
    },
    "canonical_url": {
      "type": "string"
    },
    "og_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "og_image_alt": {
      "type": "string",
      "maxLength": 125
    },
    "og_image_width": {
      "type": "integer",
      "default": 1200
    },
    "og_image_height": {
      "type": "integer",
      "default": 630
    },
    "no_index": {
      "type": "boolean",
      "default": false
    },
    "embedding": {
      "type": "json"
    },
    "ai_generated": {
      "type": "boolean",
      "default": false
    }
  }
}
